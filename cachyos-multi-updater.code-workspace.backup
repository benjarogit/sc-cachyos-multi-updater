{
	"folders": [
		{
			"path": ".",
			"name": "CachyOS Multi-Updater"
		}
	],
	"settings": {
		"files.exclude": {
			"**/.git": true,
			"**/.DS_Store": true,
			"**/node_modules": true,
			"**/.cache": true,
			"**/.stats": true,
			"**/logs": true,
			"**/*.log": true,
			"**/.update-all.lock": true,
			"**/cursor*.deb": true,
			"**/cursor-extract": true,
			"**/*-backup-*": true,
			"**/error-report-*.txt": true,
			"**/.cursor": true,
			"**/.claude": true,
			"**/.cursorrules": true,
			"**/IMPROVEMENTS.md": true,
			"**/create-release.sh": true,
			"**/tests": true,
			"**/config.conf": true,
			"**/config.local.conf": true,
			"**/*.local": true
		},
		"files.associations": {
			"*.sh": "shellscript"
		},
		"editor.formatOnSave": false,
		"editor.tabSize": 4,
		"editor.insertSpaces": true,
		"[shellscript]": {
			"editor.tabSize": 4,
			"editor.insertSpaces": true
		},
		"files.eol": "\n",
		"files.encoding": "utf8",
		"shellcheck.enable": true,
		"shellcheck.run": "onSave"
	},
	"extensions": {
		"recommendations": [
			"timonwong.shellcheck",
			"mads-hartmann.bash-ide-vscode",
			"rogalmic.bash-debug",
			"mkhl.shfmt"
		]
	}
}
